{
  "name": "@echristian/dbus-native",
  "version": "0.7.2",
  "description": "D-bus protocol implementation in native javascript",
  "keywords": [
    "dbus",
    "dcop",
    "d-bus",
    "rpc",
    "gnome",
    "kde"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/dbus-native.git"
  },
  "license": "MIT",
  "author": "Andrey Sidorov <sidorares@yandex.com>",
  "maintainers": [
    {
      "name": "Andrey Sidorov",
      "email": "sidoares@yandex.ru"
    }
  ],
  "main": "index.js",
  "bin": {
    "dbus2js": "bin/dbus2js.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test",
    "examples": "examples"
  },
  "files": [
    "bin/dbus2js.js",
    "lib/*",
    "index.js",
    "package.json",
    "index.d.ts"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "bun run lint:docs && bun run lint:code",
    "lint:code": "eslint index.js 'bin/*.js' 'lib/**/*.js' 'test/**/*.js'",
    "lint:docs": "eslint 'examples/**/*.js'",
    "test": "mocha"
  },
  "dependencies": {
    "event-stream": "^4.0.1",
    "hexy": "^0.3.5",
    "long": "^5.3.2",
    "minimist": "^1.2.8",
    "safe-buffer": "^5.1.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/minimist": "^1.2.5",
    "eslint": "^8.57.1",
    "eslint-plugin-markdown": "^5.1.0",
    "mocha": "^11.7.1",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4"
  }
}
